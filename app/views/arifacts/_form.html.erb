<%= form_for @arifact, :html => { :class => "form-horizontal arifact" } do |f| %>

  <% if @arifact.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@arifact.errors.count, "error") %> prohibited this arifact from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @arifact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :upload, value: "File to upload", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :upload, :class => 'form-control' %>
    </div>
  </div>
  <%= f.hidden_field :project_id %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tenant_project_path(tenant_id: Tenant.current_tenant_id, id: @arifact.project.id), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

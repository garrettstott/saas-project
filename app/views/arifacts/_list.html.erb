<%- model_class = Arifact -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:key) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% arifacts.each do |arifact| %>
      <tr>
        <td><%= link_to arifact.name, arifact_path(arifact), class: 'main-link' %></td>
        <td><%= s3_link Tenant.current_tenant_id, arifact.key %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      arifact_path(arifact),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Artifafct', new_arifact_path(project_id: @project.id), :class => 'btn btn-primary' %>
